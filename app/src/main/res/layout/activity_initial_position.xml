<?xml version="1.0" encoding="utf-8"?>
<jp.tkgktyk.xposed.niwatori.app.GridLinedFlyingLayout
    android:id="@+id/flying"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flying="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    flying:horizontalPadding="@dimen/flying_view_padding"
    flying:useContainer="true"
    flying:verticalPadding="@dimen/flying_view_padding"
    tools:context=".app.InitialPosition">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/screen_background_dark_transparent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/usage_of_initial_position"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </FrameLayout>

</jp.tkgktyk.xposed.niwatori.app.GridLinedFlyingLayout>